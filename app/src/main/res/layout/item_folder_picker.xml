<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivFolder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_folder"
        android:padding="8dp"
        android:background="@drawable/bg_card_dark"
        app:tint="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvFolderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Folder Name"
        android:textSize="15sp"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvSongCount"
        app:layout_constraintStart_toEndOf="@id/ivFolder"
        app:layout_constraintEnd_toStartOf="@id/ivSelected"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvSongCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12 bài hát"
        android:textSize="13sp"
        android:textColor="@color/text_tertiary"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvFolderName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivFolder"
        app:layout_constraintEnd_toStartOf="@id/ivSelected" />

    <ImageView
        android:id="@+id/ivSelected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:tint="@color/now_playing_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
